extends base3.pug 

block scripts
    script(src='../static/index.js') 
block style
    style
        include ../static/dashBoard.css
        include ../static/bookingReq.css
block content
    section#bookOne
        h1 BOOKING REQUESTS 
            table#customers 
                tr 
                    th Id 
                    th Start 
                    th End
                    th Date-Time
                    th Car Class
                    th Phone
                    th Status
                    th Response
                th 
                each data in  getacabList
                    tr 
                        td=data.id    
                        td=data.startDest    
                        td=data.endDest    
                        td=data.timeanddate    
                        td=data.cars  
                        td=data.phone  
                        if (data.status == true) 
                            td Accepted 
                        else if (data.status == false)    
                            td Rejected
                        else 
                            td pending
                        if (data.status == null) 
                            td
                                a(href=`/booking/approve/?id=${data.id}`) 
                                    |   Approve  
                                a(href=`/booking/reject/?id=${data.id}`) 
                                    |   Reject        